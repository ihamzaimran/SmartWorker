<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="41dp">

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="20dp"
            android:text="Please enter your phone number for verification"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/phoneLayout"
        android:layout_width="333dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="138dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/phoneImage"
            android:layout_width="55dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/baseline_call_black_18dp" />

        <EditText
            android:id="@+id/phoneNumber_txt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="3XXXXXXXXX"
            android:textColor="@color/black" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/codeLayout"
        android:layout_width="331dp"
        android:layout_height="49dp"
        android:layout_below="@+id/phoneLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/lockImage"
            android:layout_width="55dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/code" />

        <EditText
            android:id="@+id/code_txt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/codeLayout"
            android:hint="Verification Code"
            android:textColor="@color/black" />


    </LinearLayout>


    <Button
        android:id="@+id/SendBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="0dp"
        android:layout_marginBottom="75dp"
        android:background="@color/blue"
        android:text="Send Code"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/ErrorMessage_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="62dp"
        android:layout_marginBottom="262dp"
        android:text="An error occured while verificaton."
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/loginScreen"
        android:layout_width="248dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="74dp"
        android:layout_marginBottom="178dp"
        android:text="Go back to Login Screen."
        android:textColor="@color/black"
        android:textSize="18sp" />


</RelativeLayout>