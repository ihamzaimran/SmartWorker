<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/rCreateAccount_lbl"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="Create Account"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                />


            <TextView
                android:id="@+id/rFname_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textColor="@color/black"
                />



            <EditText
                android:id="@+id/rFname_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:selectAllOnFocus="false"
                android:singleLine="true"
                />


            <TextView
                android:id="@+id/rLname_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/rLname_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:selectAllOnFocus="false"
                android:singleLine="true"
                />

            <TextView
                android:id="@+id/rEmail_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/rEmail_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:selectAllOnFocus="false"
                android:singleLine="true"
                />

            <TextView
                android:id="@+id/rPassword_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/rPassword_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:selectAllOnFocus="false"
                android:singleLine="true"
                 />


            <TextView
                android:id="@+id/rCnic_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CNIC"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/rCnic_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black"
                android:ems="10"
                android:hint="Enter CNIC Without Dashes"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:selectAllOnFocus="false"
                android:singleLine="true" />

            <TextView
                android:id="@+id/rPhoneNo_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone "
                android:textColor="@color/black"
                />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/RCountryCode"
        android:layout_width="31dp"
        android:layout_height="23dp"
        android:text="+92"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/rPhoneNo_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="3XXXXXXXXX"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:selectAllOnFocus="false"
        android:singleLine="true" />

</LinearLayout>

            <TextView
                android:id="@+id/EC_info.lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please provide the following information."
                android:textColor="@color/black"
                android:textSize="14sp"
                />


            <TextView
                android:id="@+id/ECcost_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="Enter your Rate Per Hour in PKR."
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ECPKR_LBL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PKR"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/ECcost_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/black"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:selectAllOnFocus="false"
                    android:singleLine="true" />
                />
            </LinearLayout>

            <TextView
                android:id="@+id/ECexperience_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:text="How many years of experience do you have?"
                android:textColor="@color/black"
                android:textSize="14sp"
                />



            <Button
                android:id="@+id/rCreateAccountBtn"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:text="Create Account"
                android:textColor="@color/white"
                />


            <ProgressBar
                android:id="@+id/RegprogressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="73dp"
                android:layout_height="61dp"
                android:indeterminate="true"
                android:layout_gravity="center"
                android:indeterminateTint="@color/colorPrimary"
                android:indeterminateTintMode="src_atop"
                android:visibility="invisible"
                />




        </LinearLayout>

    </RelativeLayout>
</ScrollView>